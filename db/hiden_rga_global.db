# Calc RGA status
record(calc, "$(Sys)$(Dev)DB:Sts-Calc_")
{
        field(DESC, "RGA Status")
        field(INPA, "$(Sys)$(Dev)Sts:Fil-Sts NPP MS")
        field(INPB, "$(Sys)$(Dev)Emis-Sts NPP MS")
	field(INPC, "$(Sys)$(Dev)Trip:OverP-Sts NPP MS")
	field(INPD, "$(Sys)$(Dev)Ind:Flt-Sts NPP MS")
        field(INPE, "$(Sys)$(Dev)Ind:Run-Sts NPP MS")
        field(CALC, "(!A)|C|D?2:E&B?1:0")
	field(FLNK, "$(Sys)$(Dev)Sts")
}

record(mbbi, "$(Sys)$(Dev)Sts")
{
        field(DESC, "RGA Status")
	field(INP,  "$(Sys)$(Dev)DB:Sts-Calc_ NPP")	
	field(ZRST, "Off")
	field(ONST, "OK")
	field(TWST, "Error")
	field(ZRSV, "MINOR")
	field(TWSV, "MAJOR")
}






