# Set/Get the direction for relay
record(bi, "$(Sys)$(Dev)Dir:Rly$(SPNUM)-Sts")
{
	field(DESC, "Get RLY$(SPNUM) Dir")
	field(DTYP, "stream")
	field(INP,  "@mks937b.proto getSD($(ADR),$(SPNUM)) $(PORT)")
	field(ZNAM, "BELOW >Pr")
	field(ONAM, "ABOVE <Pr")	
}

record(bo, "$(Sys)$(Dev)Dir:Rly$(SPNUM)-Sel")
{
	field(DESC, "Set RLY$(SPNUM) Dir")
	field(DTYP, "stream")
	field(OUT, "@mks937b.proto setSD($(ADR),$(SPNUM)) $(PORT)")
	field(DISV, "0")
	field(SDIS, "$(Sys)$(Cntl)Lck:Par-Sts")       
	field(FLNK, "$(Sys)$(Dev)Dir:Rly$(SPNUM)-Sts")
	field(ASG,  "VAWRITE")
	info(autosaveFields_pass0, "VAL")

	field(ZNAM, "BELOW >Pr")
	field(ONAM, "ABOVE <Pr")	
}

# Set/Get enable status for relay
record(mbbi, "$(Sys)$(Dev)Enbl:Rly$(SPNUM)-Sts")
{
	field(DESC, "Get RLY$(SPNUM) Enable Stat")
	field(DTYP, "stream")
	field(INP,  "@mks937b.proto getEN($(ADR),$(SPNUM)) $(PORT)")
	field(ZRST, "CLEAR")
	field(ONST, "SET")	
	field(TWST, "ENABLE")
}

record(mbbo, "$(Sys)$(Dev)Enbl:Rly$(SPNUM)-Sel")
{
	field(DESC, "Set RLY$(SPNUM) Enable")
	field(DTYP, "stream")
	field(VAL, $(RLY_EN_SEL="0"))
	field(OUT, "@mks937b.proto setEN($(ADR),$(SPNUM)) $(PORT)")
	field(FLNK, "$(Sys)$(Dev)Enbl:Rly$(SPNUM)-Sts")
	field(DISV, "0")
	field(SDIS, "$(Sys)$(Cntl)Lck:Par-Sts")       
	field(ASG,  "VAWRITE")
	info(autosaveFields_pass0, "VAL")

	field(ZRST, "CLEAR")
	field(ONST, "SET")	
	field(TWST, "ENABLE")
}

# Get the setpoint status
record(bi, "$(Sys)$(Dev)Sts:Rly$(SPNUM)-Sts")
{
	field(DESC, "Get RLY$(SPNUM) Stat")
	field(DTYP, "stream")
	field(INP,  "@mks937b.proto getSS($(ADR),$(SPNUM)) $(PORT)")
	field(ZNAM, "CLEAR")
	field(ONAM, "SET")	
}









